<h1>Add new Transaction</h1>
<% if @entity.errors.any? %>
  <div class="post-errors-box">
    <p><%= pluralize(@group.errors.count, "error") %> found:</p>

    <ul>
      <% @entity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with url: "/groups/#{params[:group_id]}/entities", model: @entity, method: :post do |form| %>
  <div class="d-flex flex-column mb-3">
  <div class="col">
  <%= form.label :name%>
  <%= form.text_field :name%>
  </div>
  <div class="col">
  <%= form.label :amount%>
  <%= form.text_field :amount%>
  </div>
  <div>
    <%= form.label :groups_id %>
    <%= form.select :group_id, Group.all.map{ |g| [g.name, g.id]}, multiple:true %>
  </div>
  </div>
  <div class="col">
  <%= form.submit 'Save', class: "btn btn-primary" %>
</div>
<% end %>

<%= link_to 'Back', group_entities_path, class: "btn btn-secondary" %>