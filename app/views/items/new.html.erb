<%= render 'shared/navbar', back_link: group_items_path, title: "New Transaction" %>

<%= form_with model: [@group, @item], class:"add-form" do |form| %>

<div class="form-fields">
  <div class="field">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
    <% if @item.errors.has_key?(:name) %>
        <p class="error-message"><%= @item.errors[:name].first %></p>
      <% end %>
  </div>

  <div class="field">
    <%= form.label :amount, class: "form-label" %>
    <%= form.number_field :amount, class: "form-control" %>
    <% if @item.errors.has_key?(:amount) %>
        <p class="error-message"><%= @item.errors[:amount].first %></p>
      <% end %>
  </div>

  <div class="field">
    <%= form.label :group_ids, class: "form-label" %>
    <%= form.collection_select :group_ids, Group.all, :id, :name, {}, class: "form-select" %>
     <% if @item.errors.has_key?(:group_ids) %>
        <p class="error-message"><%= @item.errors[:group_ids].first %></p>
      <% end %>
  </div>
  </div>

  <div class="add-btn">
  <%= form.submit "Save" %>
  </div>
<% end %>