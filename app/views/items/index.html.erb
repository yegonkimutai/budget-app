<div class = "transaction_group">
  <h2><%= @group.name %></h2>
  <h2>$<%= @group.total_value %></h2>
</div>

<button class='ms-5'><%= link_to 'Add Transaction', new_group_item_path(@group), class: 'btn p-1' %></button>

<div class = "transactions_container">
<% @items.includes(:groups).each do |ent| %>
  <div class="container p-3 cont-trans">
        <div class="row">
            <p>Transaction by <%= ent.name %></p>
            <p><%= "#{ent.created_at.day} #{ent.created_at.strftime("%b")} #{ent.created_at.year}" %></p>
            </div>
        </div>
<% end %>
</div>

<button class="btn btn-danger ms-2 mt-3"><%= link_to 'Back', groups_path, class: 'btn' %></button>
