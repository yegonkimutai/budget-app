<%= render 'shared/navbar', back_link: groups_path, title:"TRANSACTION" %>

<div class="category-section">
  <div class="category-header">
    <div class="category-header-title">
      <div class="cat-detail">
        <div class="category-icon">
        <img src="<%= @group.icon %>" alt="group Icon" class="group-icon">
        </div>  
        <div class="category-name">
          <%= @group.name %>
        </div>
      </div>
    </div>

    <div class="category-amount">
    $ <%= @group.items.sum(:amount) %>
  </div>
  </div>

  <div class="items-list">
    <% @items.each do |item| %>
        <div class="item-section">
          <div class="item-name">
            Transaction <%= item.name %>
          </div>
          <div class="item-amount">
            <p><%= "#{item.created_at.day} #{item.created_at.strftime("%b")} #{item.created_at.year} at #{item.created_at.strftime('%H:%M:%S')}" %></p>
          </div>
        </div>
    <% end %>
  </div>

  <div class="add-btn">
    <%= link_to 'ADD TRANSACTION', new_group_item_path(@group), class: "add-link" %>
  </div>
</div>