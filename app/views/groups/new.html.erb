<%= render 'shared/navbar', back_link: groups_path, title:"New Category" %>

<%=form_for @group, html: {class:""} do |f| %>
  <div class="input-field">
    <%= f.label :name %>
    <%= f.text_field :name, {required: true} %>
  </div>

  <div class="input-field">
    <%= f.label :icon %>
    <%= f.url_field :icon, class: "form-control", placeholder: "url"%>
  </div>

  <div class="add-btn">
    <%= f.submit %>
  </div>
<% end %>