<%= render 'shared/navbar', title: "#{@groups.name}", back_link: false %>
<div class = "groups_container">
  <% @groups.each do |group| %>
    <div class =  "group">
    <%= link_to group_items_path(group), class: 'cont' do %>
      <div class = "details_container d-flex justify-content-around">
      <img src="<%= group.icon %>" alt="group Icon" class="group-icon">
        <h2><%= group.name %><h2>
        <h3>$<%= group.total_value %></h3>
      </div>
      <div class = "group_actions">
      <p class="date"><%= "#{group.created_at.day} #{group.created_at.strftime("%b")} #{group.created_at.year}" %></p>
      </div>
    </div>
  <% end %>
  <% end %>
</div>

<div class="add-btn">
  <%= link_to "Add New Group", new_group_path, class: 'add-link' %>
</div>